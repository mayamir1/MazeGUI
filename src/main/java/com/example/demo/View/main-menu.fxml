<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane fx:id="menuRoot"
           fx:controller="com.example.demo.View.MainMenuController"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="@style.css"
           styleClass="menu-root">

    <!-- התמונה מגיעה מ-style.css (.menu-root) ולכן אין צורך ב-ImageView -->

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
        <Label text="WAR AGAINST IRAN"
               style="-fx-text-fill:#FFF8E1;"
               styleClass="menu-title"/>

        <Region prefHeight="60"/>

        <Button text="New Game" prefWidth="160"
                style="-fx-font-size:16px;"
                styleClass="menu-button red"
                onAction="#onNewGame"/>

        <Button text="Options" prefWidth="160"
                style="-fx-font-size:16px;"
                styleClass="menu-button blue"
                onAction="#onProperties"/>

        <Button text="Help" prefWidth="160"
                style="-fx-font-size:16px;"
                styleClass="menu-button blue"
                onAction="#onHelp"/>

        <Button text="About" prefWidth="160"
                style="-fx-font-size:16px;"
                styleClass="menu-button blue"
                onAction="#onAbout"/>

        <Button text="Exit" prefWidth="160"
                style="-fx-font-size:16px;"
                styleClass="menu-button blue"
                onAction="#onExit"/>
    </VBox>
</StackPane>
